# Webapp-Konfiguration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Datenbank-Konfiguration
POSTGRES_USER=bookmarkuser
POSTGRES_PASSWORD=bookmarkpassword
POSTGRES_DB=bookmarkdb
POSTGRES_HOST=database
POSTGRES_PORT=5432
DATABASE_URL=postgresql://bookmarkuser:bookmarkpassword@database:5432/bookmarkdb

# Redis-Konfiguration
REDIS_HOST=redis
REDIS_PORT=6379

# Processor-Konfiguration
PROCESSOR_URL=http://processor:5000
MAX_WORKERS=4
MIN_CHUNK_SIZE=1000
MAX_CHUNK_SIZE=10000000
MEMORY_TARGET=70

# Backup-Konfiguration
DB_PATH=/app/data/bookmarks.sqlite
BACKUP_DIR=/app/backups
CLOUD_BACKUP_DIR=
RETENTION_DAYS=7

# API-Konfiguration
API_KEY=your_api_key_here
API_RATE_LIMIT=100 